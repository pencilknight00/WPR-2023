<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vmail sign-up page</title> 
    <link rel="stylesheet" type="text/css" href="/css/sign_up.css">
  </head>

   <%
if (typeof err === 'undefined') err = {};
if (typeof params === 'undefined') params = {};
if (typeof msg === 'undefined') msg = {};
function showErr(eMsg) {
    if (eMsg !== undefined) {
        return `<span class="err">${eMsg}</span><br />`;
    } else {
        return '';
    }
  }
%>
<body>
  <div class="wrapper">
    <h2>Sign-up</h2>
    <form action="/sign_up" method="POST">
      <div class="input-box">
        <input type="text" id="fullname" name="fullname" placeholder="Enter your full name" required>
        <%- showErr(err.username) %>
      </div>
      <div class="input-box">
        <input type="email" id="email" name="email" placeholder="Enter your email" required>
        <%- showErr(err.email) %>
      </div>
      <div class="input-box">
        <input type="password" id="password" name="password" placeholder="Create password" required>
        <%- showErr(err.password) %>
      </div>
      <div class="input-box">
        <input type="password" id="re_password" name="re_password" placeholder="Confirm password" required>
        <%- showErr(err.re_password) %>
      </div>
      <div class="input-box button">
        <input type="Submit" value="Register Now">
      </div>
      <div class="text">
        <h3>Already have an account? <a href="/sign_in">Login now</a></h3>
      </div>
    </form>
  </div>
</body>
</html>